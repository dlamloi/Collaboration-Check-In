<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:padding="20dp"
    android:background="@drawable/orange_gradient_background"
    tools:context="com.dlamloi.MAD.groupcreation.CreateGroupActivity"
    tools:showIn="@layout/activity_create_group">

    <ImageView
        android:id="@+id/select_image_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:src="@drawable/group_profile"
        />



    <LinearLayout
        android:id="@+id/group_name_layout"
        android:layout_below="@+id/select_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#cdb99c"
                />


            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:text="Group Name"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#cdb99c"
                />


        </LinearLayout>

        <EditText
            android:id="@+id/group_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#000000"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/group_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#cdb99c"
                />


            <TextView
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto"
                android:text="Members"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#cdb99c"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/member_one_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Member #1 Email"

                />

            <EditText
                android:id="@+id/member_two_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Member #2 Email"

                />

            <EditText
                android:id="@+id/member_three_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Member #3 Email"

                />

            <EditText
                android:id="@+id/member_four_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Member #4 Email"

                />

            <EditText
                android:id="@+id/member_five_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Member #5 Email"

                />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
