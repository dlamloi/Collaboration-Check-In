<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/task_row_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="5dp">


        <ImageView
            android:id="@+id/status_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/complete_icon"

            />

        <TextView
            android:id="@+id/task_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status_imageview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:maxWidth="120dp"
            android:text="Create use case diagram"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/task_assigned_member_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_title_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="brianlamlui@gmail.com"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/task_due_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_assigned_member_textview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Due: 03 Apr. 2018"
            android:textAlignment="center"
            android:textColor="@color/md_grey_600" />


    </RelativeLayout>

</android.support.v7.widget.CardView>


