<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/message_composer_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don Lam Loi"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/md_black_1000"
        />

    <TextView
        android:id="@+id/message_text_textview"
        android:layout_below="@id/message_composer_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/md_black_1000"
        android:layout_marginTop="5dp"
        android:text="Hey guys"
        />

    <TextView
        android:id="@+id/message_time_sent_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@color/md_blue_grey_600"
        android:text="27 May 18 (12:20AM)"
        />

</RelativeLayout>